@inject IStringLocalizer<NavMenu> L

<div class="top-row navbar navbar-dark">
    <div class="navbar-brand p-0 pl-2">
        <img src="/img/me.jpeg" class="rounded-circle rounded-sm w-25 float-left">
        <span class="name">
            <BSDropdown>
                <BSDropdownToggle><span class="latin float-left">Josef Gabrielsson</span><span class="aramaic float-left">ܝܘܣܦ ܒܪ ܓܒܪܐܝܠ</span></BSDropdownToggle>
                <BSDropdownMenu>
                    <BSDropdownItem Href="javascript:void(0);">Fund Me</BSDropdownItem>
                    <BSDropdownItem Href="javascript:void(0);">Endorse Me</BSDropdownItem>
                    <BSDropdownItem Href="/contact">Contact Me</BSDropdownItem>
                </BSDropdownMenu>
            </BSDropdown>
        </span>
    </div>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> @L["Home"]
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="projects">
                <span class="oi oi-list-rich" aria-hidden="true"></span> @L["Projects"]
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="skills">
                <span class="oi oi-bolt" aria-hidden="true"></span> @L["Skills"]
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="interests">
                <span class="oi oi-thumb-up" aria-hidden="true"></span> @L["Interests"]
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="hobbies">
                <span class="oi oi-heart" aria-hidden="true"></span> @L["Hobbies"]
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="quotes">
                <span class="oi oi-double-quote-serif-right" aria-hidden="true"></span> @L["Quotes"]
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="todos">
                <span class="oi oi-list" aria-hidden="true"></span> @L["BucketList"]
            </NavLink>
        </li>
    </ul>
</div>

@code {
    bool collapseNavMenu = true;

    string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}